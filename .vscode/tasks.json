// https://github.com/platformio/platformio-vscode-ide/blob/3af388134660f5c347be18686cbd349cca91c235/package.json#L681


{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "PlatformIO",
			"task": "Build",
			"problemMatcher": [
				{ "base": "$platformio", "fileLocation": [ "autoDetect", "${workspaceFolder}" ] }
			],
			"group": "build",
			"label": "PlatformIO: Build"
		}
		,
        {
            "type": "PlatformIO",
            "task": "Monitor",
            "problemMatcher": [
                "$platformio"
            ],
            "presentation": {
                "panel": "new"
            }
        }
    ]
}